 <ImageButton android:layout_height="wrap_content" 
			 android:layout_width="wrap_content" 
			 android:id="@+id/button3" 
			 android:src="@drawable/cartoon3" 
			 android:layout_toRightOf="@+id/button2"></ImageButton>
 -->

</RelativeLayout>



		  
</RelativeLayout>
